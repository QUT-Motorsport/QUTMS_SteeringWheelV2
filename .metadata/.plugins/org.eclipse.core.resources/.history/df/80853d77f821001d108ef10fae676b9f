#define BUFFER_SIZE (SCREEN_WIDTH * SCREEN_HEIGHT)

UBYTE Buffer[BUFFER_SIZE];

void MS_Screen_Init()
{
	// zeroing out buffer
	memset(&Buffer, 0, BUFFER_SIZE * sizeof(UBYTE));

	Screen_Device_Init();
	Screen_Setup();

	Screen_Clear(); // don't delay_ms since read_busy_high is in place
}

void MS_Screen_DrawPixel(uint16_t x, uint16_t y, bool on_off)
{

}


void MS_Screen_Clear_Buffer();
void MS_Screen_Flush();
